<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPureWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/shippingSameAsBillingRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Switch
            android:id="@+id/shippingSameAsBillingSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/shipping_same_as_billing"
            android:textSize="@dimen/contact_info_text_size" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/storeCardRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Switch
            android:id="@+id/storeCardSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/store_card"
            android:textSize="@dimen/contact_info_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/amountTaxLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="2.5dp">

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$0.00"
                android:textSize="@dimen/contact_info_text_size" />

            <TextView
                android:id="@+id/textViewTextAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/amountTextView"
                android:text="@string/subtotal_label"
                android:textSize="@dimen/contact_info_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="2.5dp">

            <TextView
                android:id="@+id/taxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$0.00"
                android:textSize="@dimen/contact_info_text_size" />

            <TextView
                android:id="@+id/textViewTextTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/taxTextView"
                android:text="@string/tax_label"
                android:textSize="@dimen/contact_info_text_size" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>